@model DIRECTION_GESTOR.Models.Articulos

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Quieres Eliminar Este articulo?</h3>
<div>
    <h4>Articulos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Articulo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DescripcionArticulo)
        </dd>
        <dt>
            Cantidad
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CantidadArticulo)
        </dd>
        <dt>
            Precio
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PrecioArticulo)
        </dd>
        <dt>
            Codigo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodigoArticulo)
        </dd>
        <dt>
            Fecha de Ingreso
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaArticulo)
        </dd>
        <dt>
            Estado
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdEstadoFkNavigation.DescripcionEstado)
        </dd>
        <dt style="display:none">
            Institucion
        </dt>
        <dd style="display:none">
            @Html.DisplayFor(model => model.IdInstitucionFkNavigation.NombreInstitucion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdArticulo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" >Volver Atras</a>
    </form>
</div>
