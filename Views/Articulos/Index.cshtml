@model IEnumerable<DIRECTION_GESTOR.Models.Articulos>

@{
    ViewData["Title"] = "Index";
}

<h2>Articulos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Articulo
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>
            <th>
                Codigo
            </th>
            <th>
                Fecha de Ingreso
            </th>
            <th>
                Estado
            </th>
            <th style="display:none">
                Institucion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionArticulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadArticulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioArticulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoArticulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaArticulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoFkNavigation.DescripcionEstado)
            </td>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.IdInstitucionFkNavigation.NombreInstitucion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdArticulo"><i class="glyphicon glyphicon-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdArticulo"><i class="glyphicon glyphicon-book"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdArticulo"><i class="glyphicon glyphicon-remove"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
