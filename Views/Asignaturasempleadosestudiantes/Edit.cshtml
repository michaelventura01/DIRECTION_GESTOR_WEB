@model DIRECTION_GESTOR.Models.Asignaturasempleadosestudiantes

@{
    ViewData["Title"] = "Edit";
}
<br><br>
<h2>Modificar Estudiante Asignado a Asignaturas</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAsignaturaEmpleadoEstudiante" />
            <div class="form-group">
                <label asp-for="IdAsignaturaEmpleadoFk" class="control-label">Asignatura de Profesor</label>
                <select asp-for="IdAsignaturaEmpleadoFk" class="form-control" asp-items="ViewBag.IdAsignaturaEmpleadoFk"></select>
                <span asp-validation-for="IdAsignaturaEmpleadoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoEstudianteFk" class="control-label">Estudiante</label>
                <select asp-for="CodigoEstudianteFk" class="form-control" asp-items="ViewBag.CodigoEstudianteFk"></select>
                <span asp-validation-for="CodigoEstudianteFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoFk" class="control-label">Estado</label>
                <select asp-for="IdEstadoFk" class="form-control" asp-items="ViewBag.IdEstadoFk"></select>
                <span asp-validation-for="IdEstadoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPeriodoFk" class="control-label">Periodo</label>
                <select asp-for="IdPeriodoFk" class="form-control" asp-items="ViewBag.IdPeriodoFk"></select>
                <span asp-validation-for="IdPeriodoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
