@model IEnumerable<DIRECTION_GESTOR.Models.Aulas>

@{
    ViewData["Title"] = "Index";
}
<br><br>
<h2>Aulas</h2>
<hr>
<p>
    <a asp-action="Create" class="btn btn-primary">Agregar nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Aula
            </th>
            <th>
                Edificio
            </th>
            <th>
                Estado
            </th>
            <th style="display:none">
                Institucion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionAula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEdificioFkNavigation.DescripcionEdificio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoFkNavigation.DescripcionEstado)
            </td>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.IdInstitucionFkNavigation.NombreInstitucion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAula"><i class="glyphicon glyphicon-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdAula"><i class="glyphicon glyphicon-book"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdAula"><i class="glyphicon glyphicon-remove"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
