@model DIRECTION_GESTOR.Models.Barrios

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar</h2>

<h3>Estas Seguro de eliminar esto?</h3>
<div>
    <h4>Barrios</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Barrio
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DescripcionBarrio)
        </dd>
        <dt>
            Ciudad
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdCiudadFkNavigation.DescripcionCiudad)
        </dd>
        <dt>
            Estado
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdEstadoFkNavigation.DescripcionEstado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdBarrio" />
