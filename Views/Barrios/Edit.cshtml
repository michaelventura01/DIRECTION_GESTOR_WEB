@model DIRECTION_GESTOR.Models.Barrios

@{
    ViewData["Title"] = "Edit";
}
<br><br>
<h2>Modificar Barrio</h2>
<hr>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBarrio" />
            <div class="form-group">
                <label asp-for="DescripcionBarrio" class="control-label">Barrio</label>
                <input asp-for="DescripcionBarrio" class="form-control" />
                <span asp-validation-for="DescripcionBarrio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCiudadFk" class="control-label">Ciudad</label>
                <select asp-for="IdCiudadFk" class="form-control" asp-items="ViewBag.IdCiudadFk"></select>
                <span asp-validation-for="IdCiudadFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoFk" class="control-label">Estado</label>
                <select asp-for="IdEstadoFk" class="form-control" asp-items="ViewBag.IdEstadoFk"></select>
                <span asp-validation-for="IdEstadoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
