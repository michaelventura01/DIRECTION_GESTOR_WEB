@model DIRECTION_GESTOR.Models.Calificaciones

@{
    ViewData["Title"] = "Create";
}
<br><br>
<h2>Calificar</h2>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdAsignaturaEmpleadoEstudianteFk" class="control-label">Asignatura de Profesor</label>
                <select asp-for="IdAsignaturaEmpleadoEstudianteFk" class="form-control" asp-items="ViewBag.IdAsignaturaEmpleadoEstudianteFk"></select>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion" class="control-label">Calificacion</label>
                <input type="number" asp-for="Calificacion" class="form-control" />
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoFk" class="control-label"></label>
                <select asp-for="IdEstadoFk" class="form-control" asp-items="ViewBag.IdEstadoFk"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaCalificacion" class="control-label">Fecha de Calificacion</label>
                <input type="number" asp-for="FechaCalificacion" class="form-control" />
                <span asp-validation-for="FechaCalificacion" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="IdInstitucionFk" class="control-label"></label>
                <select asp-for="IdInstitucionFk" class="form-control" asp-items="ViewBag.IdInstitucionFk"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Calificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
