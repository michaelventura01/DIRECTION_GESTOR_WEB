@model DIRECTION_GESTOR.Models.Calificaciones

@{
    ViewData["Title"] = "Edit";
}
<br><br>
<h2>Modificar Calificacion</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCalificacion" />
            <div class="form-group">
                <label asp-for="IdAsignaturaEmpleadoEstudianteFk" class="control-label">Asignatura de Profesor</label>
                <select asp-for="IdAsignaturaEmpleadoEstudianteFk" class="form-control" asp-items="ViewBag.IdAsignaturaEmpleadoEstudianteFk"></select>
                <span asp-validation-for="IdAsignaturaEmpleadoEstudianteFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion" class="control-label">Calificacion</label>
                <input asp-for="Calificacion" class="form-control" />
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoFk" class="control-label">Estado</label>
                <select asp-for="IdEstadoFk" class="form-control" asp-items="ViewBag.IdEstadoFk"></select>
                <span asp-validation-for="IdEstadoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCalificacion" class="control-label">Fecha de Calificacion</label>
                <input asp-for="FechaCalificacion" class="form-control" />
                <span asp-validation-for="FechaCalificacion" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="IdInstitucionFk" class="control-label">Institucion</label>
                <select asp-for="IdInstitucionFk" class="form-control" asp-items="ViewBag.IdInstitucionFk"></select>
                <span asp-validation-for="IdInstitucionFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
