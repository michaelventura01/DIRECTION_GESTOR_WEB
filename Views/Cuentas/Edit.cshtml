@model DIRECTION_GESTOR.Models.Cuentas

@{
    ViewData["Title"] = "Edit";
}
<br><br>
<h2>Modificar Cuenta</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCuenta" />
            <div class="form-group">
                <label asp-for="DescripcionCuenta" class="control-label">Descripcion de Cuenta</label>
                <input asp-for="DescripcionCuenta" class="form-control" />
                <span asp-validation-for="DescripcionCuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoCuenta" class="control-label">Monto</label>
                <input asp-for="MontoCuenta" class="form-control" />
                <span asp-validation-for="MontoCuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCuenta" class="control-label">Fecha de Cuenta</label>
                <input asp-for="FechaCuenta" class="form-control" />
                <span asp-validation-for="FechaCuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoCuentaFk" class="control-label">Tipo de Cuenta</label>
                <select asp-for="IdTipoCuentaFk" class="form-control" asp-items="ViewBag.IdTipoCuentaFk"></select>
                <span asp-validation-for="IdTipoCuentaFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPersonaFk" class="control-label">Persona</label>
                <select asp-for="IdPersonaFk" class="form-control" asp-items="ViewBag.IdPersonaFk"></select>
                <span asp-validation-for="IdPersonaFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoFk" class="control-label">Estado</label>
                <select asp-for="IdEstadoFk" class="form-control" asp-items="ViewBag.IdEstadoFk"></select>
                <span asp-validation-for="IdEstadoFk" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="IdInstitucionFk" class="control-label"></label>
                <select asp-for="IdInstitucionFk" class="form-control" asp-items="ViewBag.IdInstitucionFk"></select>
                <span asp-validation-for="IdInstitucionFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
