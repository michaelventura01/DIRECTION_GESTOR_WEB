@model IEnumerable<DIRECTION_GESTOR.Models.Cuentas>

@{
    ViewData["Title"] = "Index";
}
<br><br>
<h2>Cuentas</h2>
<br>
<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Descripcion de Cuenta
            </th>
            <th>
                Tipo de Cuenta
            </th>
            <th>
                Monto
            </th>
            <th>
                Fecha de Cuenta
            </th>
            <th>
                Estado
            </th>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.IdInstitucionFkNavigation)
            </th>
            <th>
                Persona
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionCuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoCuentaFkNavigation.DescripcionTipoCuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoCuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoFkNavigation.DescripcionEstado)
            </td>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.IdInstitucionFkNavigation.DescripcionInstitucion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersonaFkNavigation.NombrePersonas) @Html.DisplayFor(modelItem => item.IdPersonaFkNavigation.ApellidoPersonas)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCuenta"><i class="glyphicon glyphicon-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdCuenta"><i class="glyphicon glyphicon-book"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdCuenta"><i class="glyphicon glyphicon-remove"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
