@model DIRECTION_GESTOR.Models.Cursos

@{
    ViewData["Title"] = "Create";
}
<br><br>
<h2>Agregar Curso</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescripcionCurso" class="control-label">Nombre del Curso</label>
                <input asp-for="DescripcionCurso" class="form-control" />
                <span asp-validation-for="DescripcionCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoCurso" class="control-label">Duracion</label>
                <input type="number" asp-for="TiempoCurso" class="form-control" /> Semanas
                <span asp-validation-for="TiempoCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoFk" class="control-label">Estado</label>
                <select asp-for="IdEstadoFk" class ="form-control" asp-items="ViewBag.IdEstadoFk"></select>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="IdInstitucionFk" class="control-label"></label>
                <select asp-for="IdInstitucionFk" class ="form-control" asp-items="ViewBag.IdInstitucionFk"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
