@model DIRECTION_GESTOR.Models.Cursos

@{
    ViewData["Title"] = "Delete";
}
<br><br>
<h2>Eliminar</h2>
<br>
<h3>Deseas Eliminar Esto?</h3>
<div>
    <h4>Cursos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre del Curso
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DescripcionCurso)
        </dd>
        <dt>
            Duracion
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TiempoCurso) Semnas
        </dd>
        <dt>
            Estado
        </dt>
        <dd >
            @Html.DisplayFor(model => model.IdEstadoFkNavigation.DescripcionEstado)
        </dd>
        <dt style="display:none">
            @Html.DisplayNameFor(model => model.IdInstitucionFkNavigation)
        </dt>
        <dd style="display:none">
            @Html.DisplayFor(model => model.IdInstitucionFkNavigation.DescripcionInstitucion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCurso" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver Atras</a>
    </form>
</div>
