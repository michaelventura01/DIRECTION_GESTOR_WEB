@model DIRECTION_GESTOR.Models.Cursos

@{
    ViewData["Title"] = "Edit";
}
<br><br />
<h2>Modificar Curso</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCurso" />
            <div class="form-group">
                <label asp-for="DescripcionCurso" class="control-label">Nombre de Curso</label>
                <input asp-for="DescripcionCurso" class="form-control" />
                <span asp-validation-for="DescripcionCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoCurso" class="control-label">Tiempo de Curso</label>
                <input asp-for="TiempoCurso" class="form-control" />
                <span asp-validation-for="TiempoCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoFk" class="control-label">Estado</label>
                <select asp-for="IdEstadoFk" class="form-control" asp-items="ViewBag.IdEstadoFk"></select>
                <span asp-validation-for="IdEstadoFk" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="IdInstitucionFk" class="control-label"></label>
                <select asp-for="IdInstitucionFk" class="form-control" asp-items="ViewBag.IdInstitucionFk"></select>
                <span asp-validation-for="IdInstitucionFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
