@model IEnumerable<DIRECTION_GESTOR.Models.Cursos>

@{
    ViewData["Title"] = "Index";
}
<br><br>
<h2>Cursos</h2>
<br>
<p>
    <a asp-action="Create">Agregar Nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre de Curso
            </th>
            <th>
                Tiempo de Duracion
            </th>
            <th>
                Estado
            </th>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.IdInstitucionFkNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TiempoCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoFkNavigation.DescripcionEstado)
            </td>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.IdInstitucionFkNavigation.DescripcionInstitucion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCurso"><i class="glyphicon glyphicon-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdCurso"><i class="glyphicon glyphicon-book"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdCurso"><i class="glyphicon glyphicon-remove"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
