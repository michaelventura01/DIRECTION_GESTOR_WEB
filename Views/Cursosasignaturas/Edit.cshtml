@model DIRECTION_GESTOR.Models.Cursosasignaturas

@{
    ViewData["Title"] = "Edit";
}
<br><br>
<h2>Modificar Asignaturas de Cursos</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCursoAsignatura" />
            <div class="form-group">
                <label asp-for="IdAsignaturaFk" class="control-label">Asignatura</label>
                <select asp-for="IdAsignaturaFk" class="form-control" asp-items="ViewBag.IdAsignaturaFk"></select>
                <span asp-validation-for="IdAsignaturaFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCursoFk" class="control-label">Curso</label>
                <select asp-for="IdCursoFk" class="form-control" asp-items="ViewBag.IdCursoFk"></select>
                <span asp-validation-for="IdCursoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoFk" class="control-label">Estado</label>
                <select asp-for="IdEstadoFk" class="form-control" asp-items="ViewBag.IdEstadoFk"></select>
                <span asp-validation-for="IdEstadoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
