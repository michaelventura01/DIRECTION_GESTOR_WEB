@model DIRECTION_GESTOR.Models.Direcciones

@{
    ViewData["Title"] = "Delete";
}
<br><br>
<h2>Eliminar</h2>
<hr>
<h3>Deseas Eliminar Esto?</h3>
<div>
    <h4>Direcciones</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Direccion
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DescripcionDireccion)
        </dd>
        <dt>
            Barrio
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdBarrioFkNavigation.DescripcionBarrio), @Html.DisplayFor(model => model.IdBarrioFkNavigation.IdCiudadFkNavigation.DescripcionCiudad)
        </dd>
        <dt>
            Estado
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdEstadoFkNavigation.DescripcionEstado)
        </dd>
        <dt style="display:none">
            @Html.DisplayNameFor(model => model.IdInstitucionFkNavigation)
        </dt>
        <dd style="display:none">
            @Html.DisplayFor(model => model.IdInstitucionFkNavigation.DescripcionInstitucion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDireccion" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver Atras</a>
    </form>
</div>
