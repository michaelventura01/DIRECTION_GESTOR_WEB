@model IEnumerable<DIRECTION_GESTOR.Models.Direcciones>

@{
    ViewData["Title"] = "Index";
}
<br><br>
<h2>Direcciones</h2>
<hr>
<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Direccion
            </th>
            <th>
                Barrio
            </th>
            <th>
                Estado
            </th>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.IdInstitucionFkNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionDireccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdBarrioFkNavigation.DescripcionBarrio), @Html.DisplayFor(modelItem => item.IdBarrioFkNavigation.IdCiudadFkNavigation.DescripcionCiudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoFkNavigation.DescripcionEstado)
            </td>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.IdInstitucionFkNavigation.DescripcionInstitucion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDireccion"><i class="glyphicon glyphicon-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdDireccion"><i class="glyphicon glyphicon-book"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdDireccion"><i class="glyphicon glyphicon-remove"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
