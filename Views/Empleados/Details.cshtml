@model DIRECTION_GESTOR.Models.Empleados

@{
    ViewData["Title"] = "Details";
}
<br><br>
<h2>Detalles</h2>
<br>
<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Persona
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdPersonaFkNavigation.NombrePersonas) @Html.DisplayFor(model => model.IdPersonaFkNavigation.ApellidoPersonas)
        </dd>
        <dt>
            Puesto de Trabajo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdPuestoTrabajoFkNavigation.DescripcionPuestoTrabajo)
        </dd>
        <dt>
            Sueldo
        </dt>
        <dd>
            DOP @Html.DisplayFor(model => model.SueldoEmpleado).00
        </dd>
        <dt>
            Estado
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdEstadoFkNavigation.DescripcionEstado)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CodigoEmpleado" class="btn btn-primary">Modificar</a> |
    <a asp-action="Index">Volver Atras</a>
</div>
