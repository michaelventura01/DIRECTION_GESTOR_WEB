@model DIRECTION_GESTOR.Models.Empleados

@{
    ViewData["Title"] = "Edit";
}
<br><br>
<h2>Modificar</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoEmpleado" />
            <div class="form-group">
                <label asp-for="IdPersonaFk" class="control-label">Persona</label>
                <select asp-for="IdPersonaFk" class="form-control" asp-items="ViewBag.IdPersonaFk"></select>
                <span asp-validation-for="IdPersonaFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPuestoTrabajoFk" class="control-label">Puesto de Trabajo</label>
                <select asp-for="IdPuestoTrabajoFk" class="form-control" asp-items="ViewBag.IdPuestoTrabajoFk"></select>
                <span asp-validation-for="IdPuestoTrabajoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SueldoEmpleado" class="control-label">Sueldo</label>
                <input type="number" asp-for="SueldoEmpleado" class="form-control" />
                <span asp-validation-for="SueldoEmpleado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdEstadoFk" class="control-label">Estado</label>
                <select asp-for="IdEstadoFk" class="form-control" asp-items="ViewBag.IdEstadoFk"></select>
                <span asp-validation-for="IdEstadoFk" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
