@model IEnumerable<DIRECTION_GESTOR.Models.Estudiantescursos>

@{
    ViewData["Title"] = "Index";
}
<br><br>
<h2>Estudiantes En Cursos</h2>
<br>
<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Estudiante
            </th>
            <th>
                Curso
            </th>
            <th>
                Fecha
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoEstudianteFkNavigation.CodigoEstudiante) - @Html.DisplayFor(modelItem => item.CodigoEstudianteFkNavigation.IdPersonaFkNavigation.NombrePersonas) @Html.DisplayFor(modelItem => item.CodigoEstudianteFkNavigation.IdPersonaFkNavigation.ApellidoPersonas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCursoFkNavigation.DescripcionCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEstudianteCurso)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEstudianteCurso"><i class="glyphicon glyphicon-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdEstudianteCurso"><i class="glyphicon glyphicon-book"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdEstudianteCurso"><i class="glyphicon glyphicon-remove"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
