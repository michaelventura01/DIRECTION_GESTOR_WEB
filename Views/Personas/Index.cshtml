@model IEnumerable<DIRECTION_GESTOR.Models.Personas>

@{
    ViewData["Title"] = "Index";
}
<br><br>
<h2>Personas</h2>
<br>
<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Fecha de Nacimiento
            </th>
            <th>
                Direccion
            </th>
            <th>
                Sexo
            </th>
            <th>
                Nacionalidad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePersonas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoPersonas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimientoPersona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDireccionFkNavigation.DescripcionDireccion), @Html.DisplayFor(modelItem => item.IdDireccionFkNavigation.IdBarrioFkNavigation.DescripcionBarrio), @Html.DisplayFor(modelItem => item.IdDireccionFkNavigation.IdBarrioFkNavigation.IdCiudadFkNavigation.DescripcionCiudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSexoFkNavigation.DescripcionSexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NacionalidadPaisFkNavigation.Nacionalidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPersona"><i class="glyphicon glyphicon-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPersona"><i class="glyphicon glyphicon-book"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPersona"><i class="glyphicon glyphicon-remove"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
