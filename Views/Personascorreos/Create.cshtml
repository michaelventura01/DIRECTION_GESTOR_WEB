@model DIRECTION_GESTOR.Models.Personascorreos

@{
    ViewData["Title"] = "Create";
}
<br><br>
<h2>Agregar Correo de Persona</h2>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPersonaFk" class="control-label">Persona</label>
                <select asp-for="IdPersonaFk" class ="form-control" asp-items="ViewBag.IdPersonaFk"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdCorreoFk" class="control-label">Correo</label>
                <select asp-for="IdCorreoFk" class ="form-control" asp-items="ViewBag.IdCorreoFk"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
