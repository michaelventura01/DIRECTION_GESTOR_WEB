@model DIRECTION_GESTOR.Models.Telefonos

@{
    ViewData["Title"] = "Create";
}
<br /><br>
<h3>Agregar Telefono</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescripcionTelefono" class="control-label">Telefono</label>
                <input asp-for="DescripcionTelefono" class="form-control" />
                <span asp-validation-for="DescripcionTelefono" class="text-danger"></span>
            </div>
            <div class="form-group" id="tipoTelefono">
                <label asp-for="IdTipoTelefonoFk" class="control-label">Tipo de Telefono</label>
                <select asp-for="IdTipoTelefonoFk" class="form-control" asp-items="ViewBag.IdTipoTelefonoFk"></select>
            </div>
            <div class="form-group" id="estadoTelefono">
                <label asp-for="IdEstadoFk" class="control-label">Estado</label>
                <select asp-for="IdEstadoFk" class="form-control" asp-items="ViewBag.IdEstadoFk"></select>
            </div>
            <div class="form-group" id="institucionTelefono" style="display:none">
                <label asp-for="IdInstitucionFk" class="control-label"></label>
                <select asp-for="IdInstitucionFk" class="form-control" asp-items="ViewBag.IdInstitucionFk"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" id="btnCreateTelefono"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
